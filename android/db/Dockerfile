# Используем образ Python, так как SQLite встроен в него
FROM python:3.9-slim

# Устанавливаем рабочую директорию
WORKDIR /app

# Копируем SQL-скрипт для инициализации базы данных
COPY init.sql .

# Копируем скрипт для создания базы данных
COPY init_db.py .

# Выполняем скрипт для создания базы данных при запуске контейнера
CMD ["python", "init_db.py"]